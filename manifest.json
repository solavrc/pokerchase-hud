{
  "manifest_version": 3,
  "name": "PokerChase HUD",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage",
    "background"
  ],
  "action": {
    "default_popup": "dist/index.html"
  },
  "options_page": "dist/index.html",
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://game.poker-chase.com/*"
      ],
      "js": [
        "dist/content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/web_accessible_resource.js"
      ],
      "matches": [
        "https://game.poker-chase.com/*"
      ]
    }
  ]
}
